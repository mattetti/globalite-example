<h1>New page</h1>

<%= error_messages_for :page %>

<% form_for(@page) do |f| %>
  <p>
    <b><%= :title.l('title (replacement)') %></b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b><%= :body.l('body (replacement)') %></b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <b><%= :author.l('author (replacement)') %></b><br />
    <%= f.text_field :author %>
  </p>

  <p>
    <b><%= :published_date.l('published date (replacement)') %></b><br />
    <%= f.date_select :published_date %>
  </p>

  <p>
    <%= f.submit :create.l('create (replacement)') %>
  </p>
<% end %>

<%= link_to :back.l('back (replacement)'), pages_path %>
